				sortdict[stn_info[k]['name']]['id'] = k
				sortdict[stn_info[k]['name']]['state'] = stn_info[k]['state']
		elif list_type == 'lwrh':
			if 'rhum' in stn_info[k]['vars'] and 'lwet' in stn_info[k]['vars']:
				sortdict[stn_info[k]['name']] = {}
				sortdict[stn_info[k]['name']]['id'] = k
				sortdict[stn_info[k]['name']]['state'] = stn_info[k]['state']
		else:
			sortdict[stn_info[k]['name']] = {}
			sortdict[stn_info[k]['name']]['id'] = k
			sortdict[stn_info[k]['name']]['state'] = stn_info[k]['state']
	sky = sortdict.keys()
	sky.sort()
	station_list = []
	for st in state_list:
