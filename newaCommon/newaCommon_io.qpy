		if list_type == 'lw':
			if 'lwet' in stn_info[k]['vars']:
				sortdict[stn_info[k]['name']] = {}
				sortdict[stn_info[k]['name']]['id'] = k
				sortdict[stn_info[k]['name']]['state'] = stn_info[k]['state']
		elif list_type == 'rh' :
			if 'rhum' in stn_info[k]['vars']:
